<Controls:MetroWindow
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    x:Class="DownGramer.Image"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowStyle="None"
    UseNoneWindowStyle="True"
    IgnoreTaskbarOnMaximize="True"
    Title="Image" Height="736" Width="1280" Name="ImageScreen" KeyDown="WindowImage_KeyDown" Loaded="WindowImage_Loaded">

    <!-- icons -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <!-- image -->
    <Grid Background="#7C000000" Opacity="1" OpacityMask="White" Name="GridImage">
        <Controls:ProgressRing Name="ProgressRingImage" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" IsActive="True" Canvas.Left="290" Canvas.Top="574" />
    </Grid>
</Controls:MetroWindow>
